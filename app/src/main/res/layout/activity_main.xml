<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Switch
        android:id="@+id/switch_toggle"
        android:layout_width="158dp"
        android:layout_height="48dp"
        android:text="動作ON/OFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_interval_label"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:text="通知間隔:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switch_toggle" />

    <EditText
        android:id="@+id/et_interval_hours"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:hint="時"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@id/tv_interval_label"
        app:layout_constraintTop_toTopOf="@id/tv_interval_label" />

    <EditText
        android:id="@+id/et_interval_minutes"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:hint="分"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@id/et_interval_hours"
        app:layout_constraintTop_toTopOf="@id/tv_interval_label" />

    <TextView
        android:id="@+id/tv_renotify_label"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:text="再通知時間:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_interval_label" />

    <EditText
        android:id="@+id/et_renotify_minutes"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:hint="分"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@id/tv_renotify_label"
        app:layout_constraintTop_toTopOf="@id/tv_renotify_label" />

    <TextView
        android:id="@+id/tv_time_band_label"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:text="通知時間帯:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_renotify_label" />

    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:text="09:00"
        app:layout_constraintStart_toEndOf="@id/tv_time_band_label"
        app:layout_constraintTop_toTopOf="@id/tv_time_band_label" />

    <TextView
        android:id="@+id/tv_time_band_tilde"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:text="～"
        app:layout_constraintStart_toEndOf="@id/tv_start_time"
        app:layout_constraintTop_toTopOf="@id/tv_time_band_label" />

    <TextView
        android:id="@+id/tv_end_time"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:text="18:00"
        app:layout_constraintStart_toEndOf="@id/tv_time_band_tilde"
        app:layout_constraintTop_toTopOf="@id/tv_time_band_label" />

    <TextView
        android:id="@+id/tv_title_label"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:text="通知タイトル:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_time_band_label" />

    <EditText
        android:id="@+id/et_title"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:hint="タイトルを入力"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_title_label"
        app:layout_constraintTop_toTopOf="@id/tv_title_label" />

    <TextView
        android:id="@+id/tv_message_label"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:text="通知メッセージ:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_label" />

    <EditText
        android:id="@+id/et_message"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:hint="メッセージを入力"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_message_label"
        app:layout_constraintTop_toTopOf="@id/tv_message_label" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        app:layout_constraintTop_toBottomOf="@id/tv_message_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <ListView
        android:id="@+id/lv_logs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btn_save"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>